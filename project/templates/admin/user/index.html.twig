{% extends 'layouts/admin-standard.html.twig' %}

{% block title %}Users{% endblock %}

{% block content %}
    <h1>Users</h1>
    <a href="{{ path('admin_user_edit') }}" class="btn btn-primary float-end">Create new</a>

    <table class="table">
        <thead>
        <tr>
            <th>username</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Last Login</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('admin_user_edit', {'id':user.id}) }}">{{ user.username }}</a></td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastLoginAt?(user.lastLoginAt|date('m/d/y h:ia')):'Never' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
